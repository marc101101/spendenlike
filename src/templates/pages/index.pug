extends ../layout.pug

block nav
  .brand
    a(href="#") 
      img(src="assets/images/logo-white.png")
    .text.white SpendenLike e.V.

  ul
    li
      a(href="#idee") Idee
    li
      a(href="#sprachrohr") Sprachrohr
    li
